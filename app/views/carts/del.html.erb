<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<% if current_user.carts.any? %>

	<table>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Price</th>
	      <th>Category</th>
	      <th>Condition</th>
	      <th>Description</th>
	      <th>Picture</th>
	<!--
	      <th>User</th>
	-->
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @carts.each do |cart| %>
	      <tr>
		<td><%= cart.name %></td>
		<td><%= cart.price %></td>
		<td><%= cart.category %></td>
		<td><%= cart.condition %></td>
		<td><%= cart.description %></td>
		<td><%= cart.picture.url %></td>
		<td><%= link_to 'Delete', delete_cart_path %></td>
	<!--
		<td><%= image_tag cart.picture.url if cart.picture? %></td>
		<td><%= cart.user %></td>
	-->
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'Remove all', clear_cart_path %>

	<%= link_to 'Check Out', check_out_path %>

<% end %>

<%= link_to 'Post a new item on sale!', new_item_path %>
<%= link_to 'Back to homepage', root_path %>
