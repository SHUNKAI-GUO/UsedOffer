<p id="notice"><%= notice %></p>
<body>
<div class="container">
  <div class="row">
    <div class="col-md-7 vertical-center">
        <img class="img-fluid rounded mb-3 mb-md-0" src= <%= @item.picture.url %> alt="Image unavailable">
      </div>
      <div class="col-md-5">
        <h3><%= @item.name %></h3>
        <p>Price: $ <%= @item.price %></p>
        <p>Category: <%= @item.category %></p>
        <p>Condition: <%= @item.condition %></p>
        <p>Description: <%= @item.description %></p>
        <div class="btn btn-primary btn-outline btn-block">
          <%= link_to "Add to cart", {:controller => "carts", :action => "create", :name => @item.name, :price => @item.price, :category => @item.category, :condition => @item.condition, :description => @item.description, :picture => @item.picture, :item => @item }%>
        </div>
  </div>
</div>
<div class="btn btn-primary btn-outline btn-block">
  <%= link_to "Go back to browse all items", {:controller => "items", :action => "index" }%>
</div>
</body>

