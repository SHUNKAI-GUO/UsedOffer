<body class="bg-light">
  <div class="container">
    <div class="col-md-8 order-md-1">
        <%= form_with(model: item, local: true) do |form| %>
          <% if item.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

              <ul>
                <% item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field mb-3">
            <label for="name">Item name</label>
            <%= form.text_field :name, id: :item_name %>
          </div>

          <div class="field mb-3">
            <label for="price">Item price</label>
            <%= form.text_field :price, id: :item_price %>
          </div>

          <div class="field mb-3">
            <label for="category">Item Category</label>
            <%= form.text_field :category, id: :item_category %>
          </div>

          <div class="field mb-3">
            <label for="condition">Item condition</label>
            <%= form.text_field :condition, id: :item_condition %>
          </div>

          <div class="field mb-3">
            <label for="desctiption">Item description</label>
            <%= form.text_area :description, id: :item_description %>
          </div>

          <div class="field mb-3"s>
            <label for="picture">Upload a picture</label>
            <span class="picture"><%= form.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %></span>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
       
      <% end %>
    </div>
  </div>

